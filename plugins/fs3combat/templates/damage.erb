<%= header %>
<%= "Damage: #{target.name}" %>

<%= "Damage Level 1" %>
<% damage.each_with_index do |d, index| %>
  <% if d.current_severity == 'FLESH' %>
    <%= display_damage_entry(d, index) %>
  <% end %>
<% end %>

<%= "Damage Level 2" %>
<% damage.each_with_index do |d, index| %>
  <% if d.current_severity == 'IMPAIR' %>
    <%= display_damage_entry(d, index) %>
  <% end %>
<% end %>

<%= "Damage Level 3" %>
<% damage.each_with_index do |d, index| %>
  <% if d.current_severity == 'INCAP' %>
    <%= display_damage_entry(d, index) %>
  <% end %>
<% end %>

<%= "Healed Wounds" %>
<% damage.each_with_index do |d, index| %>
  <% if d.current_severity == 'HEAL' %>
    <%= display_damage_entry(d, index) %>
  <% end %>
<% end %>

<%= "Healed By: #{healed_by}" %>
<% if vehicle_notice %>

<%= vehicle_notice %>
<% end %>

<%= "See https://boroughs.aresmush.com/help/damage for damage level descriptions." %>
<%= footer %>